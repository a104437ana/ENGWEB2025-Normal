extends layout 

block content
    .w3-container
        p
        table.w3-table-all
            tr.w3-light-blue.w3-text-black
                th Id da Edição
                th Ano da Edição
                th País Organizador
                th País Vencedor
            each livro in livros
                tr
                    td
                        a.w3-hover-text-pink(href='/' + livro._id) #{livro._id}
                    td= livro.anoEdição
                    td
                        a.w3-hover-text-pink(href='/paises/' + livro.organizacao) #{livro.organizacao}
                    td
                        if livro.vencedor
                            a.w3-hover-text-pink(href='/paises/' + livro.vencedor) #{livro.vencedor}
                        else 
                            | -

//-
                    td= livro.title
                    td
                        ul.w3-ul
                            each au in livro.author
                                li
                                    a.w3-hover-text-pink(href='/entidades/' + au) #{au}
                    td= livro.publishDate
                    td= livro.pages
        p